import cv2, matplotlib.pyplot as plt

img = cv2.imread("image2.jpg")
k_vals = [2,4,8,16]

plt.figure(figsize=(10,4))
plt.subplot(1,5,1); plt.title("Original"); plt.imshow(img); plt.axis("off")

for i,k in enumerate(k_vals,2):
    samp = img[::k, ::k]
    plt.subplot(1,5,i); 
    plt.title(f"k={k}")
    plt.imshow(samp); 
    plt.axis("off")

plt.show()
